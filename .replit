modules = ["python-3.12", "nodejs-20"]
run = "bash run_replit.sh"
entrypoint = "src/api/main.py"

[nix]
channel = "stable-24_05"
packages = ["glibcLocales", "libxcrypt", "postgresql", "redis"]

[deployment]
run = ["bash", "run_replit.sh"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Run All Services"

[[workflows.workflow]]
name = "Run All Services"
author = "sports-betting"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash run_replit.sh"

[[workflows.workflow]]
name = "Run Backend Only"
author = "sports-betting"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn src.api.main:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow]]
name = "Run Frontend Only"
author = "sports-betting"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev -- --host 0.0.0.0"

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 3000
externalPort = 3000

[env]
PYTHONPATH = "/home/runner/${REPL_SLUG}"
DATABASE_URL = "postgresql://sportsbetting:sportsbetting@localhost/sportsbetting"
REDIS_URL = "redis://localhost:6379/0"
CELERY_BROKER_URL = "redis://localhost:6379/1"
CELERY_RESULT_BACKEND = "redis://localhost:6379/2"

[packager]
language = "python"

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

[languages]

[languages.python]
pattern = "**/*.py"

[languages.python.languageServer]
start = "pylsp"
